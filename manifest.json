{
  "manifest_version": 2,
  "name": "AMZ COPY",
  "version": "1.0.0",
  "description": "亚马逊asin详情抓取",
  "author": "EricaDreamer",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
		"*://*.amazon.com/*"
    
	],
  "content_scripts": [
    {
      "matches": [
				"*://www.amazon.com/*/*dp/*"
			],
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/jquery.min.js", 
        "js/content-script.js",
        "js/notify.js",
        "js/clipboard.min.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
		"/images/*"
	]
}
